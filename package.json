{
  "name": "effect-sim",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev --local",
    "dev:bun": "bun --watch bun/index.tsx",
    "dev:ts": "tsc -b -w",
    "dev:test": "vitest",
    "test": "vitest run",
    "test:types": "vitest typecheck --run shared/models",
    "typecheck": "tsc -b --noEmit",
    "predev": "convex dev  --local --until-success && convex dashboard",
    "build": "tsc -b && vite build",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@edge-runtime/vm": "^5.0.0",
    "@mantine/core": "^8.3.7",
    "@mantine/hooks": "^8.3.7",
    "@mantine/notifications": "^8.3.7",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@tabler/icons-react": "^3.35.0",
    "@types/bun": "^1.3.2",
    "@types/ramda": "^0.31.1",
    "commander": "^14.0.2",
    "convex": "1.28.0",
    "convex-helpers": "^0.1.104",
    "convex-test": "^0.0.39",
    "emoji-picker-react": "^4.15.0",
    "flexlayout-react": "^0.8.17",
    "fluent-convex": "0.9.2",
    "idb-keyval": "^6.2.2",
    "mobx": "^6.15.0",
    "mobx-react-observer": "^1.1.0",
    "postprocessing": "^6.38.0",
    "prompts": "^2.4.2",
    "ramda": "^0.32.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-nil": "^2.0.0",
    "three": "^0.181.0",
    "ts-pattern": "^5.9.0",
    "type-route": "^1.1.0",
    "use-debounce": "^10.0.6",
    "vitest": "^4.0.12",
    "wled-client": "^0.22.1",
    "ws": "^8.18.3",
    "zod": "3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@types/prompts": "^2.4.9",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "wrangler": "^4.51.0"
  }
}
